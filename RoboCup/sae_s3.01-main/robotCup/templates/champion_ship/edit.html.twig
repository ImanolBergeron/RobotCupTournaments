{% extends 'base.html.twig' %}

{% block title %}Modifier le championnat{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .form-container {
            width: 100%;    
            max-width: 600px;
            margin: 2rem auto;
            padding: 2rem;
            color: rgba(243, 244, 246, 1);
            position: relative;
            z-index: 20;
        }

        .championship-form {
            background: rgba(17, 24, 39, 0.2);
            backdrop-filter: blur(10px);
            padding: 2rem;
            border-radius: 1rem;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .form-title {
            text-align: center;
            font-size: 1.8rem;
            line-height: 2rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
            background: linear-gradient(45deg, #60a5fa, #38bdf8);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .input-group {
            margin-bottom: 1.25rem;
        }

        .input-group label {
            display: block;
            color: #94a3b8;
            margin-bottom: 0.5rem;
            font-weight: 500;
        }

        .form-input {
            width: 100%;
            border-radius: 0.375rem;
            border: 1px solid rgba(255, 255, 255, 0.1);
            outline: 0;
            background: rgba(17, 24, 39, 0.3);
            padding: 0.75rem 1rem;
            color: #e2e8f0;
            transition: all 0.3s ease;
        }

        .form-input:focus {
            border-color: #60a5fa;
            box-shadow: 0 0 0 2px rgba(96, 165, 250, 0.2);
        }

        .form-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 1rem;
        }

        .btn {
            background: linear-gradient(45deg, #3b82f6, #0ea5e9);
            color: white;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 0.5rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            text-decoration: none;
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 0 25px rgba(59, 130, 246, 0.5);
        }

        .btn-danger {
            background: linear-gradient(45deg, #ef4444, #dc2626);
        }

        .btn-back {
            color: #94a3b8;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .btn-back:hover {
            color: #60a5fa;
        }
    </style>
{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="form-container">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
        <h1 class="form-title">{{"Edit_Championship" |trans}}</h1>

        {{ include('champion_ship/_form.html.twig', {'button_label': 'Update'}) }}

        <div class="form-actions">
            <a href="{{ path('app_championship') }}" class="btn-back">
                <i class="bi bi-arrow-left"></i> {{"Return_To_List" |trans}}
            </a>

            {{ include('champion_ship/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}