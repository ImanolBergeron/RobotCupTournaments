{% extends 'base.html.twig' %}

{% block title %}RobotCup{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>   
        .hero-title {
            font-size: 4rem;
            font-weight: 800;
            line-height: 1.1;
            background: linear-gradient(45deg, #e2e8f0, #e2e8f0);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            text-shadow: 0 0 40px rgba(255, 255, 255, 0.25);
            animation: glow 2s ease-in-out infinite alternate;
        }

        .hero-subtitle {
            font-size: 1.25rem;
            color: #94a3b8;
            max-width: 600px;
            margin: 2rem auto;
        }

        .btn-glow {
            background: linear-gradient(45deg, #3b82f6, #0ea5e9);
            border: none;
            padding: 1rem 2rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            transition: all 0.3s ease;
            color: white;
        }
        
        .btn-glow:hover {
            transform: translateY(-2px);
            box-shadow: 0 0 25px rgba(59, 130, 246, 0.5);
        }

        .alert{
            width:30%;
            margin: 50px auto 0;
        }

        a{
            color:white;
            text-decoration : none;
        }

        .competitions-list {
        display: flex;
        justify-content: space-around;
        margin-top: 20px;
        }

        .competition-card {
            background: rgba(17, 24, 39, 0.2);
            backdrop-filter: blur(10px);
            padding: 1.5rem;
            border-radius: 1rem;
            border: 1px solid rgba(255, 255, 255, 0.1);
            transition: all 0.3s ease;
            width: 20%;
            height: 20vh; 
            display: flex;
            flex-direction: column;
            cursor: pointer;
            margin: 10px;
        }

        .competition-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1);
            border: 2px solid white;
        }

        .competition-header {
            display: flex;
            justify-content: space-between;
        }

        .competition-dates {
            font-size: 1.2rem;
        }

        .competition-status {
            font-size: 2rem;
            font-weight: bold;
            color: #ff5733;
        }

        .competition-content {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 1rem;
        }

        .competition-name {
            font-size: 2rem;
            font-weight: bold;
        }

        .index-alert{
            top: 85vh;
            width: 100%;
            display:flex;
            justify-content:center;
        }

        @media (max-width: 768px) {
            .competitions-list {
                flex-direction: column; 
                align-items: center; 
            }

            .competition-card {
                width: 90%; 
                height: auto; 
                margin: 10px 0; 
            }
    }

    </style>
{% endblock %}

{% block body %}
    {{ parent() }}

    <div class="py-5 position-absolute top-50 start-50 translate-middle">
        <div class="row justify-content-center text-center">
            <div class="col-12">
                <h1 class="hero-title">{{ "Tite_Homepage" |trans }}</h1>
                <p class="hero-subtitle">
                    {{ "Caption_Homepage" |trans }}
                </p>
                {% if app.user %}
                    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_ORGA') %}
                    {% else %}
                        <button class="btn btn-glow" onclick="window.location.href = '{{ path('app_seeTeam') }}';"> {{ "see_team" |trans }}</button>
                    {% endif %}
                {% else %}
                    <button class="btn btn-glow" onclick="window.location.href = '{{ path('app_login') }}';"> {{ "Log_In" |trans }}</button>
                {% endif %}
            </div>
        </div>
    </div>
     <div class="competitions-list">
        {% for key, competition in competitions %}
            {% if competition %}
            <div class="competition-card">
                <a href="{{ path('app_competition_show', {'id': competition.id}) }}">
                    <div class="competition-header">
                        <div class="competition-dates">
                            <div class="start-date">
                                {{ competition.start|date('d/m/Y H:i') }}
                            </div>
                            <div class="end-date">
                                {{ competition.end|date('d/m/Y H:i') }}
                            </div>
                        </div>
                        <div class="competition-status">
                            {% if key == 'last' %}
                                TERMINÃ‰E
                            {% elseif key == 'current' %}
                                EN COURS
                            {% elseif key == 'next' %}
                                A VENIR
                            {% endif %}
                        </div>
                    </div>

                    <div class="competition-content">
                        <div class="competition-name">
                            <div class="competition-title">{{ competition.name }}</div>
                        </div>
                    </div>
                </a>   
            </div>
            {% endif %}
        {% endfor %}    
    </div>
    <div class ="index-alert position-absolute">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
