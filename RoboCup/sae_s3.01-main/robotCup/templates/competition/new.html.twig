{% extends 'base.html.twig' %}

{% block title %}Nouvelle compétition - RobotCup{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .double-forms-container {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 2rem;
        }

        .allForms{
            display:flex;
            flex-direction: row;
            justify-content:space-around;
            margin-top: 2rem;
        }

        .input-group label {
            display: block;
            color: #94a3b8;
            margin-bottom: 0.5rem;
            font-weight: 500;
        }

        .form-input, .form-control {
            width: 100%;
            border-radius: 0.375rem;
            border: 1px solid rgba(255, 255, 255, 0.1);
            outline: 0;
            background: rgba(17, 24, 39, 0.3);
            padding: 0.75rem 1rem;
            color: #e2e8f0;
            transition: all 0.3s ease;
        }

        .form-input:focus, .form-control:focus {
            border-color: #60a5fa;
            box-shadow: 0 0 0 2px rgba(96, 165, 250, 0.2);
        }

        .btn {
            background: linear-gradient(45deg, #3b82f6, #0ea5e9);
            color: white;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 0.5rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }
        .description-input {
            min-height: 100px;
            resize: vertical;
            font-family: inherit;
            line-height: 1.5;
            padding: 0.75rem;
        }

        .input-group {
            margin-bottom: 1.5rem;
        }

        .form-input {
            width: 100%;
            background: rgba(17, 24, 39, 0.3);
            border: 1px solid rgba(255, 255, 255, 0.1);
            padding: 0.75rem;
            border-radius: 0.5rem;
            color: white;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .form-input:focus {
            outline: none;
            border-color: #3b82f6;
            box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.3);
        }
        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 0 25px rgba(59, 130, 246, 0.5);
        }

        .form-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 1rem;
        }

        .btn-back {
            color: #94a3b8;
            text-decoration: none;
            transition: color 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-back:hover {
            color: #60a5fa;
        }

        .help-text {
            font-size: 0.875rem;
            color: #94a3b8;
            margin-top: 0.25rem;
        }

        .allForms{
            display:flex;
            flex-direction: row;
            justify-content:center;
            margin-top: 2rem;
        }

        @media (max-width: 768px) {
            .allForms {
                flex-direction: column;
                align-items: center;
                justify-content: center;
                gap: 2rem;
            }
        }

    </style>
{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="allForms">          
        <div class="form-container">
            <h1 class="title">Créer une nouvelle compétition</h1>
            {{ form_start(form) }}
                <div class="input-group">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-input'}}) }}
                    {{ form_errors(form.name) }}
                </div>

                <div class="input-group">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-input description-input'}}) }}
                    {{ form_errors(form.description) }}
                </div>

                <div class="input-group">
                    {{ form_label(form.start) }}
                    {{ form_widget(form.start, {'attr': {'class': 'form-input'}}) }}
                    {{ form_errors(form.start) }}
                </div>

                <div class="input-group">
                    {{ form_label(form.end) }}
                    {{ form_widget(form.end, {'attr': {'class': 'form-input'}}) }}
                    {{ form_errors(form.end) }}
                </div>

            <button class="btn">{{ "Save"|trans }}</button>
            <a href="{{ path('app_competition') }}" class="btn btn-back">
                <i class="fas fa-arrow-left"></i> Retour
            </a>   
            {{ form_end(form) }}
        </div>
        <div class="form-container">
            <h1 class="form-title">Créer un nouveau terrain</h1>
            {{ form_start(form_stage) }}
                <div class="input-group">
                    {{ form_label(form_stage.name) }}
                    {{ form_widget(form_stage.name, {'attr': {'class': 'form-input'}}) }}
                    {{ form_errors(form_stage.name) }}
                </div>
                <button class="btn">{{ "Save"|trans }}</button>
            {{ form_end(form_stage) }}
        </div>
    </div>
{% endblock %}